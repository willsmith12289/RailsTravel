<div class="jumbotron">
  <h1 class="display-3"><%= @map.title %></h1>
</div>
<div class="btn-group" role="group">
  <%= link_to "Back To Maps", maps_path, class: 'btn btn-default btn-lg' %>
  <button class="btn btn-default btn-lg"><%= link_to "Show Markers", controller: "markers", action: "index", map_id: @map %></button>
  <%= link_to "Calendar", map_events_path(@map), class: 'btn btn-default btn-lg'  %>
</div>


<div id="form">
  <%= render 'markers/form' %>
</div>

<div id="directionForm" class="field form-group">
  <label for="mode">Mode of Travel: </label>
  <select id="mode", class="form-control">
    <option value="DRIVING">Driving</option>
    <option value="WALKING">Walking</option>
    <option value="BICYCLING">Bicycling</option>
    <option value="TRANSIT">Transit</option>
  </select>
  <button id="directionsBtn" class="btn-default">Get Directions</button>
</div>

<div id="map"></div>
<div id="right-panel"></div>

  <%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?key=AIzaSyCq9JRLgL2ATvunEN0vRZ7g3fBeBiVznUo&libraries=places&callback=initialize' %>
