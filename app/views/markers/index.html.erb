<p id="notice"><%= notice %></p>

<h1>Listing Markers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Info</th>
      <th>Map</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.title %></td>
        <td><%= marker.address %></td>
        <td><%= marker.latitude %></td>
        <td><%= marker.longitude %></td>
        <td><%= marker.info %></td>
        <td><%= @map.id %></td>
        <td><%= link_to 'Show', map_marker_path(@map, marker) %></td>
        <td><%= link_to 'Edit', edit_map_marker_path(@map, marker) %></td>
        <td><%= link_to 'Destroy', map_marker_path(@map, marker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Marker', new_map_marker_path(@map) %>
<%= link_to 'Map', maps_path %>
