<%= form_for(@marker, :url => map_markers_path(@map), remote: true) do |f| %>
  <% if @marker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@marker.errors.count, "error") %> prohibited this marker from being saved:</h2>

      <ul>
      <% @marker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :raw_address %><br>
    <%= f.text_field :raw_address, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.hidden_field :latitude, value: @marker.latitude %>
  </div>
  <div class="field form-group">
    <%= f.hidden_field :longitude, value: @marker.longitude  %>
  </div>
  <div class="field form-group">
    <%= f.label :info %><br>
    <%= f.text_area :info, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.hidden_field :map_id, :value => @map.id %>
  </div>
  <div class="field form-group">
    <%= f.hidden_field :place_id %>
  </div>
  <div class="actions" id="markerFormSubmit">
    <%= f.submit 'Add Marker', class: 'btn btn-success'%>
  </div>
<% end %>
